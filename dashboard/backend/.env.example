# ============================================================
# REELFORGE DASHBOARD - ENVIRONMENT VARIABLES
# ============================================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Session Secret (CHANGE IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-change-this

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=n8n_reels
DB_USER=n8n
DB_PASSWORD=your_secure_password

# ============================================================
# AUTHENTICATION
# ============================================================

# Admin User (for first login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_immediately

# JWT Secret (if using JWT instead of sessions)
JWT_SECRET=your-jwt-secret-change-this
JWT_EXPIRES_IN=24h

# ============================================================
# EXTERNAL SERVICES
# ============================================================

# Discord Webhook (optional - for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============================================================
# FILE STORAGE
# ============================================================

# Video Storage Path
VIDEO_POOL_DIR=/var/lib/n8n/videos/pool
VIDEO_TEMP_DIR=/var/lib/n8n/videos/temp
VIDEO_OUTPUT_DIR=/var/lib/n8n/videos/output

# CDN URL (if using S3/R2 for video serving)
CDN_BASE_URL=https://cdn.your-domain.com

# ============================================================
# INSTAGRAM API
# ============================================================
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://your-domain.com/auth/instagram/callback

# ============================================================
# AI APIS
# ============================================================

# Claude API
CLAUDE_API_KEY=sk-ant-xxxxx

# Video API (Luma/Pika)
VIDEO_API_PROVIDER=luma
VIDEO_API_KEY=your_video_api_key

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
LOG_DIR=/var/lib/n8n/logs
